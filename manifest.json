{
  "manifest_version": 2,
  "name": "Material Color Sync",
  "version": "1.0",
  "description": "Automatically sync Firefox theme with end-4 Material colors",
  
  "permissions": [
    "theme",
    "storage",
    "nativeMessaging",
    "activeTab"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Material Color Sync"
  },
  
  "native_messaging_hosts": {
    "material_color_reader": {
      "path": "/usr/local/bin/material_color_reader.py",
      "type": "stdio",
      "allowed_origins": ["moz-extension://*"]
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}